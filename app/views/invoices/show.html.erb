<%= render partial: "layouts/sidebar" %>
<h1>Invoice Items</h1>
<div class = "row"><p></p></div>
<div class = "offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 padding">
  <div class = "card">         
    <div class = "card-body">
      <div class = "table-responsive-sm">
        <table class = "table table-striped">
          <thead>
            <tr>
              <th class = "center">#</th>
              <th>Item</th>
              <th>Description</th>
              <th class = "right"></th>
              <th class = "center"></th>
              <th class = "right">Price</th>
            </tr>
          </thead>
          <tbody>
            <% @invoice.exercises.each_with_index do |exercise, index| %>
              <tr>
                <td class = "center"><%= index + 1 %></td>
                <td class = "left strong"><%= exercise.name %></td>
                <td class = "left"><%= exercise.description %></td>              
                <td class = "right"></td>
                <td class = "center"></td>
                <td class = "right">Rs. <%= exercise.price %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class = "row">
        <div class = "col-lg-4 col-sm-5">
        </div>
        <div class = "col-lg-4 col-sm-5 ml-auto">
          <table class = "table table-clear">
            <tbody>
              <tr>
                <td class = "left">
                  <strong class = "text-dark">Total</strong>
                </td>
                <td class = "right">Rs. <%= @invoice.amount %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class = "card-footer bg-white">
      <p class = "mb-0">Gym Mangement System</p>
      <span class = "float-right"><%= link_to "back", invoice_history_path %></span>
    </div>
  </div>
</div>
