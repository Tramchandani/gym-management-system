<%= render partial: "layouts/sidebar" %>
<h1> Exercises in Cart </h1>

<% if @exercises.empty? %>
  <div class="container mt-100 pos">
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
         <div class="card-body cart">
            <div class="col-sm-12 empty-cart-cls text-center">
              <%= image_tag "cart.png", class: "img-fluid mb-4 mr-3 dimensions" %>
              <h3><strong>Your Cart is Empty</strong></h3>
              <%= link_to "Select Exercises", exercises_path, class: "btn btn-primary cart-btn-transform m-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class = "px-4 px-lg-0">
    <div class = "pb-5">
      <div class = "container">
        <div class = "row">
          <div class = "col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
            <div class = "table-responsive">
              <table class = "table">
                <thead>
                  <tr>
                    <th scope = "col" class = "border-0 bg-light">
                      <div class = "p-2 px-3 text-uppercase">Exercise selected</div>
                    </th>
                    <th scope = "col" class = "border-0 bg-light">
                      <div class = "py-2 text-uppercase">Price</div>
                    </th>
                    <th scope = "col" class = "border-0 bg-light">
                      <div class = "py-2 text-uppercase">Remove</div>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% @exercises.each do |exercise| %>
                  <tr>
                    <th scope = "row" class = "border-0">
                      <div class = "p-2">
                        <div class = "ml-3 d-inline-block align-middle">
                          <h5 class = "mb-0"> <p class="text-dark d-inline-block align-middle"><%= exercise.name %></p></h5>
                        </div>
                      </div>
                    </th>
                    <td class = "border-0 align-middle"><strong>Rs. <%= exercise.price %></strong></td>
                    <td class = "border-0 align-middle">
                      <%= link_to destroy_exercise_in_cart_path(exercise.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class = "zmdi zmdi-delete"></i>
                      <% end %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <%= link_to "back", exercises_path %>
            <button class = "btn btn-outline-primary btn-sm float-right"><%= link_to "Subscribe", subscribe_path, method: :post %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
